<core:View
    controllerName="mood_tracker.controller.detail.LogMood"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:html="http://www.w3.org/1999/xhtml">
  <Page
        showNavButton="{device>/isPhone}"
        navButtonPress="onNavBack"
        showHeader="true"
        enableScrolling="true"
        title="{i18n>logMoodPageTitle}"
        id="idHomePage"
        class="pageHome">
        <headerContent>
            <Button id="fullScreen" visible="{device>/isNoPhone}"
                icon="{app>/FullScreenButtonIcon}"
                press="handleFullScreenClick" />
        </headerContent>
    <content>
      <f:SimpleForm
            minWidth="800"
            maxContainerCols="2"
            editable="true"
            layout="ResponsiveGridLayout"
            labelSpanL="3"
            labelSpanM="3"
            emptySpanL="4"
            emptySpanM="4"
            columnsL="1"
            columnsM="1"
            class="editableForm">
        <f:content>
          <!-- Log Mood -->
          <MessageStrip text="{
                            parts: [{
                              path: 'i18n>logMoodMessageSteps'
                            }, {
                              path: 'mood>/current'
                            }],
                            formatter: 'mood_tracker.model.Formatter.formattedMessage'
                          }"
                          showIcon="true"
                          customIcon="sap-icon://nurse"/>
          <Label text="{i18n>logMoodLabelSteps}" />
          <Slider value="{mood>/current}" min="{mood>/min}" max="{mood>/max}" change="onCurrentMoodChange" />
          <Label text="{i18n>logMoodLabelPast}" />
          <Panel id="pastPanel" expandable="true" expanded="false" headerText="{i18n>logMoodPastPanelHeaderText}" width="auto" class="sapUiResponsiveMargin"
               content="{mood>/past}">
            <content>
              <f:SimpleForm maxContainerCols="2"
                          editable="true"
                          layout="ResponsiveGridLayout"
                          labelSpanL="3"
                          labelSpanM="3"
                          emptySpanL="4"
                          emptySpanM="4"
                          columnsL="1"
                          columnsM="1"
                          class="editableForm">
                <f:content>
                  <Label text="{
                            parts: [{
                              path: 'mood>day'
                            }, {
                              path: 'i18n>logMoodLabelStepsPast'
                            }, {
                              path: 'mood>value'
                            }],
                            formatter: 'mood_tracker.model.Formatter.localizedFormattedMessage'
                          }" />
                  <Slider value="{mood>value}" min="{mood>/min}" max="{mood>/max}" enabled="{mood>editable}">
                    <layoutData>
                      <l:GridData span="L3 M3 S8" />
                    </layoutData>
                  </Slider>
                  <ToggleButton icon="{= ${mood>editable} ? 'sap-icon://unlocked' : 'sap-icon://locked' }" pressed="{mood>editable}">
                    <layoutData>
                      <l:GridData span="L1 M1 S3" />
                    </layoutData>
                  </ToggleButton>
                </f:content>
              </f:SimpleForm>
            </content>
          </Panel>
        </f:content>
      </f:SimpleForm>
    </content>
  </Page>
</core:View>
